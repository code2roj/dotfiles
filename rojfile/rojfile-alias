#!/bin/bash

# Check for the required arguments
if [ "$#" -ne 3 ]; then
    echo "Usage: $0 <input_directory> <regex> <destination_directory>"
    exit 1
fi

# Assign arguments to variables
input_dir="$1"
regex="$2"
dest_dir="$3"

# Validate input directory
if [ ! -d "$input_dir" ]; then
    echo "Error: Input directory does not exist."
    exit 1
fi

# Create destination directory if it doesn't exist
if [ ! -d "$dest_dir" ]; then
    mkdir -p "$dest_dir"
fi

# Iterate over matching files in the input directory
for file in "$input_dir"/*; do
    filename=$(basename "$file")
    if [[ "$filename" =~ ^$regex ]]; then
        ln -s "$file" "$dest_dir/$filename"
        echo "Alias created for: $filename"
    fi
done

echo "All matching files have been processed."
