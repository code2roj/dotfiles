#!/bin/bash

# Check if exactly 2 arguments are provided
if [ "$#" -ne 2 ]; then
    echo "Usage: $0 <directory_path> <string_to_add>"
    exit 1
fi

# Assign arguments to variables
directory="$1"
string_to_add="$2"

# Check if the given directory exists
if [ ! -d "$directory" ]; then
    echo "Error: Directory '$directory' does not exist."
    exit 1
fi

# Iterate over all files in the directory
for file in "$directory"/*; do
    # Check if it's a file
    if [ -f "$file" ]; then
        # Get the directory and filename
        dir_name=$(dirname "$file")
        base_name=$(basename "$file")
        
        # Construct the new filename with the string prepended
        new_name="$dir_name/$string_to_add$base_name"
        
        # Rename the file
        mv "$file" "$new_name"
    fi
done

echo "String added to the beginning of all filenames in $directory."
