#!/bin/python3
import os

# File paths
input_file = input("Enter the input file path:	")
output_file = input("Where do you want to save the output?:	")

# Line range
start_line = int(input("Enter the first line to be cut:	"))
end_line = int(input("Enter the last line to be cur:	"))

# Check if input file exists
if not os.path.exists(input_file):
    print(f"Error: {input_file} does not exist.")
    exit(1)

# Process the file
with open(input_file, "r") as file:
    lines = file.readlines()

# Extract lines and save to output file
extracted_lines = lines[start_line - 1:end_line]
with open(output_file, "w") as file:
    file.writelines(extracted_lines)

# Remove extracted lines from input file
remaining_lines = lines[:start_line - 1] + lines[end_line:]
with open(input_file, "w") as file:
    file.writelines(remaining_lines)

print(f"Lines {start_line} to {end_line} have been extracted to {output_file} and removed from {input_file}.")
