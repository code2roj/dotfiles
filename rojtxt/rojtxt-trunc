#!/bin/bash

# Check if the directory argument is provided
if [ -z "$1" ]; then
    echo "Usage: $0 /path/to/your/directory"
    exit 1
fi

# Assign the first argument to DIR variable
DIR="$1"

# Loop through all .md files in the specified directory
for file in "$DIR"/*.md; do
    # Check if the file exists
    if [ -f "$file" ]; then
        # Empty the contents of the file
        > "$file"
        echo "Emptied: $file"
    fi
done

echo "All .md files in $DIR have been emptied."
